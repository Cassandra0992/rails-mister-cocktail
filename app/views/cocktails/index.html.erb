<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
        <div class="cards-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/jcLcWL8D7AQ);">
          <%= cocktail.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>




