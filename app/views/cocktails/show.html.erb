<div class="container" >
    <h1>Votre cocktail 🍸</h1>
  <div class="cocktail-name">
    <em><h4><%=@cocktail.name %></h4></em>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= "#{dose.description} - #{dose.ingredient.name}" %>
           <p> <i class="fas fa-trash"></i><%= link_to "Remove",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="btn-options">
    <br>
      <%=link_to "Add a dose?", new_cocktail_dose_path(@cocktail), class: "btn btn-outline-primary" %>
    <br>
      <%=link_to "Back to the list", cocktails_path, class: "btn btn-outline-danger" %>
  </div>
</div>

