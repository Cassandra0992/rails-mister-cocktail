<h1>Votre cocktail 🍸</h1>
<%= @cocktail.name %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.description} - #{dose.ingredient.name}" %>
       <%= link_to "Remove",
        dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<br>
<%=link_to "Add a dose?", new_cocktail_dose_path(@cocktail) %>
<br>
<%=link_to "Back", cocktails_path %>
